// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String          @id
  email         String          @unique
  name          String
  avatarUrl     String
  ChannelMember ChannelMember[]
}

model Message {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  text      String
  userId    String
  roomId    String
  cursor    String
}

model Channel {
  id            String          @id
  name          String
  description   String
  ChannelMember ChannelMember[]
}

model ChannelMember {
  channelId String
  userId    String

  @@id([channelId, userId])
  User    User    @relation(fields: [userId], references: [id])
  Channel Channel @relation(fields: [channelId], references: [id])
}
